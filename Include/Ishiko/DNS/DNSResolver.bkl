setting ISHIKO_DNS_ROOT
{
    help = "Path to the Ishiko DNS installation";
    default = '$(ISHIKO)/DNS';
}

template IshikoDNSResolver
{
    includedirs += $(ISHIKO_DNS_ROOT)/Include;

    if ($(toolset) == gnu)
    {
        libdirs += $(ISHIKO_DNS_ROOT)/Lib;
    }

    if ($(toolset) != gnu)
    {
        libdirs += $(ISHIKO_DNS_ROOT)/Lib/$(arch);
    }
}
